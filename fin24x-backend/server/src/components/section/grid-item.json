{
  "collectionName": "components_section_grid_items",
  "info": {
    "displayName": "Grid Item",
    "icon": "grid",
    "description": "Item for grid-type sections (courses, cards, etc.)"
  },
  "options": {},
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "subtitle": {
      "type": "string",
      "required": false,
      "description": "e.g., 'Market Expert', 'Financial Advisor'"
    },
    "description": {
      "type": "text",
      "required": false
    },
    "icon": {
      "type": "string",
      "required": false,
      "description": "FontAwesome icon class (e.g., 'fa-line-chart')"
    },
    "iconText": {
      "type": "string",
      "required": false,
      "description": "Text next to icon (e.g., 'Live Rates', 'Tips')"
    },
    "actionText": {
      "type": "string",
      "required": false,
      "default": "View",
      "description": "Action button text (e.g., 'View', 'Read')"
    },
    "url": {
      "type": "string",
      "required": true
    },
    "publishedDate": {
      "type": "date",
      "required": true
    }
  }
}

