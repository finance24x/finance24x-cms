{
  "kind": "collectionType",
  "collectionName": "homepage_sections",
  "info": {
    "singularName": "homepage-section",
    "pluralName": "homepage-sections",
    "displayName": "Homepage Section",
    "description": "Dynamic sections for the homepage with featured items and category reference"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sectionType": {
      "type": "enumeration",
      "enum": ["grid", "grid-with-date", "news"],
      "required": true,
      "default": "grid"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "required": true,
      "description": "Category this section represents (for filtering articles)"
    },
    "buttonText": {
      "type": "string",
      "required": false,
      "default": "view all"
    },
    "buttonUrl": {
      "type": "string",
      "required": false,
      "description": "URL for 'View All' button (can be auto-generated from category slug)"
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "enabled": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "itemsToShow": {
      "type": "integer",
      "required": false,
      "default": 5,
      "min": 1,
      "max": 10,
      "description": "Number of latest articles to show on homepage (default: 5)"
    }
  }
}
