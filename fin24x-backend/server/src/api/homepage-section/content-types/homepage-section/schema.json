{
  "kind": "collectionType",
  "collectionName": "homepage_sections",
  "info": {
    "singularName": "homepage-section",
    "pluralName": "homepage-sections",
    "displayName": "Homepage Section",
    "description": "Dynamic sections for the homepage with featured items and category reference"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sectionType": {
      "type": "enumeration",
      "required": true,
      "default": "grid",
      "enum": [
        "grid",
        "grid-with-date",
        "news"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "description": "Category this section represents (for filtering articles)"
    },
    "buttonText": {
      "type": "string",
      "default": "view all",
      "required": false
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0,
      "min": 0
    },
    "enabled": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "itemsToShow": {
      "type": "integer",
      "required": false,
      "default": 5,
      "min": 1,
      "max": 10
    }
  }
}
