{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Articles/Posts that can be organized by category and displayed in sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": false
    },
    "excerpt": {
      "type": "text",
      "required": false,
      "description": "Short description/excerpt for listings"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "author": {
      "type": "string",
      "required": true,
      "default": "admin"
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "premium": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Mark as premium article (for future premium section)"
    },
    "views": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "tags": {
      "type": "json",
      "required": false,
      "description": "Array of tags for additional filtering"
    }
  }
}
