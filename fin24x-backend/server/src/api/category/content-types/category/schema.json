{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": "Categories for organizing articles (matches homepage sections)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "SectionName": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": false
    },
    "order": {
      "type": "integer",
      "required": false,
      "default": 0
    },
    "enabled": {
      "type": "boolean",
      "required": true,
      "default": true
    },
    "articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article.article",
      "mappedBy": "category"
    },
    "relatedcategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category"
    },
    "relatedtaggroups": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag-group.tag-group"
    }
  }
}
