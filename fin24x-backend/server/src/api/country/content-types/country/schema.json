{
  "kind": "collectionType",
  "collectionName": "countries",
  "info": {
    "singularName": "country",
    "pluralName": "countries",
    "displayName": "Country",
    "description": "Geographical locations (India, USA, UAE, etc.)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 3
    },
    "currency": {
      "type": "string",
      "required": true,
      "maxLength": 3
    },
    "cities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::city.city",
      "mappedBy": "country"
    },
    "states": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::state.state",
      "mappedBy": "country"
    }
  }
}

