{
  "kind": "collectionType",
  "collectionName": "states",
  "info": {
    "singularName": "state",
    "pluralName": "states",
    "displayName": "State",
    "description": "States/Provinces within countries"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "maxLength": 10
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "inversedBy": "states"
    },
    "cities": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::city.city",
      "mappedBy": "state"
    }
  }
}

