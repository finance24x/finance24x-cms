{
  "kind": "singleType",
  "collectionName": "headers",
  "info": {
    "singularName": "header",
    "pluralName": "headers",
    "displayName": "Header",
    "description": "Site header with logo and navigation"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "logoText": {
      "type": "string",
      "required": true,
      "default": "Unicat"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "navigationCategories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "required": false,
      "description": "Categories to display in navigation (uses category name as label and slug as URL)"
    }
  }
}

