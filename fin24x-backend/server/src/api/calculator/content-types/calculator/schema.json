{
  "kind": "collectionType",
  "collectionName": "calculators",
  "info": {
    "singularName": "calculator",
    "pluralName": "calculators",
    "displayName": "Calculator",
    "description": "Financial and Health calculators"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "maxLength": 200
    },
    "description": {
      "type": "richtext"
    },
    "calculatorCategory": {
      "type": "enumeration",
      "enum": [
        "finance",
        "health"
      ],
      "required": true,
      "default": "finance"
    },
    "calculatorType": {
      "type": "enumeration",
      "enum": [
        "sip",
        "fd",
        "ppf",
        "income-tax",
        "nps",
        "gratuity",
        "rd",
        "retirement",
        "compound-interest",
        "simple-interest",
        "ideal-weight",
        "child-height",
        "calorie",
        "bmi",
        "bmr",
        "diabetes-risk",
        "walk-calorie-burn"
      ],
      "required": true
    },
    "icon": {
      "type": "string",
      "default": "fa-calculator"
    },
    "iconColor": {
      "type": "string",
      "default": "#14bdee"
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "howToUse": {
      "type": "richtext"
    },
    "formulaExplanation": {
      "type": "richtext"
    },
    "disclaimer": {
      "type": "text"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 70
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "faqs": {
      "type": "component",
      "repeatable": true,
      "component": "calculator.faq"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "calculators"
    },
    "relatedCalculators": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::calculator.calculator"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    }
  }
}

