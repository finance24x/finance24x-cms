{
  "kind": "collectionType",
  "collectionName": "calculators",
  "info": {
    "singularName": "calculator",
    "pluralName": "calculators",
    "displayName": "Calculator",
    "description": "Financial and Health calculators"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "calculatorCategory": {
      "type": "enumeration",
      "required": true,
      "default": "finance",
      "enum": [
        "finance",
        "fitness & health",
        "loans"
      ]
    },
    "calculatorType": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "sip",
        "fd",
        "ppf",
        "income-tax",
        "nps",
        "gratuity",
        "rd",
        "retirement",
        "compound-interest",
        "simple-interest",
        "ideal-weight",
        "child-height",
        "calorie",
        "bmi",
        "bmr",
        "diabetes-risk",
        "walk-calorie-burn",
        "emi",
        "home-loan-emi",
        "car-loan-emi",
        "personal-loan-emi",
        "loan-eligibility",
        "loan-prepayment"
      ]
    },
    "icon": {
      "type": "string",
      "default": "fa-calculator"
    },
    "iconColor": {
      "type": "string",
      "default": "#14bdee"
    },
    "excerpt": {
      "type": "text",
      "maxLength": 200
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "richtext"
    },
    "formulaExplanation": {
      "type": "richtext"
    },
    "howToUse": {
      "type": "richtext"
    },
    "disclaimer": {
      "type": "text"
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 70
    },
    "metaDescription": {
      "type": "text",
      "maxLength": 160
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isPopular": {
      "type": "boolean",
      "default": false
    },
    "faqs": {
      "type": "component",
      "component": "calculator.faq",
      "repeatable": true
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "calculators"
    },
    "relatedCalculators": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::calculator.calculator"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag"
    },
    "enableCalculator": {
      "type": "boolean",
      "default": true
    },
    "views": {
      "type": "biginteger",
      "default": "5"
    }
  }
}
